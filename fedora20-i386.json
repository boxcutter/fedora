{
  "variables": {
    "cm": "nocm",
    "cm_version": "",
    "cm_set_path": "",
    "headless": "",
    "update": "false",
    "iso_url": "http://mirrors.kernel.org/fedora/releases/20/Fedora/i386/iso/Fedora-20-i386-DVD.iso",
    "iso_checksum": "284ea30ddd50db1b30cd5cd9fae7495dad8714ef1e4428d69a8c8ce80e03b6a9"
  },
  "builders": [{
    "vm_name": "fedora20-i386",
    "type": "vmware-iso",
    "guest_os_type": "fedora",
    "http_directory": "http",
    "iso_url": "{{ user `iso_url` }}",
    "iso_checksum": "{{ user `iso_checksum` }}",
    "iso_checksum_type": "sha256",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "10000s",
    "headless": "{{ user `headless` }}",
    "tools_upload_flavor": "linux",
    "boot_command": [
      "<tab> linux text biosdevname=0 ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/ks.cfg<enter><enter>"
    ],
    "floppy_files": ["floppy/vmware9.k3.8rc4.patch", "floppy/vmware9.compat_mm.patch", "floppy/vmware9.k3.9.vmhgfs.patch", "floppy/vmhgfs-d_count-kernel-3.11-tools-9.6.0.patch"],
    "shutdown_command": "echo 'vagrant'|sudo -S shutdown -h now",
    "disk_size": 10140,
    "vmx_data": {
      "memsize": "512",
      "numvcpus": "1",
      "cpuid.coresPerSocket": "1"
    }
  },
  {
    "vm_name": "fedora20-i386",
    "type": "virtualbox-iso",
    "http_directory": "http",
    "iso_url": "{{ user `iso_url` }}",
    "iso_checksum": "{{ user `iso_checksum` }}",
    "iso_checksum_type": "sha256",
    "guest_os_type": "Fedora",
    "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
    "virtualbox_version_file": ".vbox_version",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "10000s",
    "headless": "{{ user `headless` }}",
    "boot_command": [
      "<tab> linux text biosdevname=0 ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/ks.cfg<enter><enter>"
    ],
    "shutdown_command": "echo 'vagrant'|sudo -S shutdown -h now",
    "disk_size": 10140,
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "512"],
      ["modifyvm", "{{.Name}}", "--cpus", "1"]
    ]
  }],
  "provisioners": [{
    "type": "shell",
    "environment_vars": [
      "CM={{user `cm`}}",
      "CM_VERSION={{user `cm_version`}}",
      "CM_SET_PATH={{user `cm_set_path`}}",
      "UPDATE={{user `update`}}"
    ],
    "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
    "scripts": [
      "script/sshd.sh",
      "script/update.sh",
      "script/vagrant.sh",
      "script/vmtool.sh",
      "script/cmtool.sh",
      "script/cleanup.sh"
    ]
  }],
  "post-processors": [{
    "type": "vagrant",
    "keep_input_artifact": false,
    "output": "box/{{.Provider}}/fedora20-i386-{{user `cm`}}{{user `cm_version`}}.box"
  }]
}
